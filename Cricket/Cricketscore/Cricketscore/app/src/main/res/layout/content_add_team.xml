<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_team"
    tools:context=".add_team">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_name"
            android:hint="Team Name"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl1">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/matches"
            android:hint="Matches"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/team_name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/won"
            android:hint="Won"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/matches"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl3">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lost"
            android:hint="Lost"
            android:paddingLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/won"/>
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/b"
        android:text="Save Team"
        android:layout_below="@id/fl4"
        android:layout_marginTop="20dp"
        />
</RelativeLayout>
