            <TextView android:textSize="20sp" android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="3dp" android:text="3. Change Wickets per Innings" android:fontFamily="sans-serif-condensed"/>
            <TextView android:textSize="20sp" android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="3dp" android:text="4. Share PDFs across social media" android:fontFamily="sans-serif-condensed"/>
