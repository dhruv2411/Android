        <Button android:textStyle="bold" android:textColor="@color/white" android:id="@+id/bupgrade" android:background="@drawable/buttonstyling_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="1dp" android:text="Upgrade" android:layout_weight="1"/>
